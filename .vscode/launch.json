    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "api\\appp.py",
                "FLASK_DEBUG": "1",
                "PYTHONPATH": "${workspaceFolder}\\api"  // Aseg√∫rate de ajustar esto a la ruta correcta
            },
            "args": [
                "run"
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}